{
  "name": "scrummer",
  "displayName": "scrummer",
  "publisher": "scrummer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:clickup.itemClick",
    "*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/scrummers/clickup-vscode"
  },
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "clickup.selectWorkspace",
        "category": "Click Up",
        "title": "Select Workspace"
      },
      {
        "command": "clickup.setToken",
        "category": "Click Up",
        "title": "Set Click Up Token"
      },
      {
        "command": "clickup.deleteToken",
        "category": "Click Up",
        "title": "Delete Click Up Token"
      },
      {
        "command": "clickup.updateToken",
        "category": "Click Up",
        "title": "Edit Click Up Token"
      },
      {
        "command": "clickup.addTask",
        "category": "Click Up",
        "title": "Add Task"
      },
      {
        "command": "clickup.viewTask",
        "category": "Click Up",
        "title": "View Task",
        "icon": {
          "light": "resources/light/view.svg",
          "dark": "resources/dark/view.svg"
        }
      },
      {
        "command": "clickup.quickAddTask",
        "category": "Click Up",
        "title": "Quick Add Task",
        "icon": {
          "light": "resources/light/new.svg",
          "dark": "resources/dark/new.svg"
        }
      },
      {
        "command": "clickup.updateTags",
        "category": "Click Up",
        "title": "Set Tags",
        "icon": {
          "light": "resources/light/tag.svg",
          "dark": "resources/dark/tag.svg"
        }
      },
      {
        "command": "clickup.updateStatus",
        "category": "Click Up",
        "title": "Change Status",
        "icon": {
          "light": "resources/light/complete.svg",
          "dark": "resources/dark/complete.svg"
        }
      },
      {
        "command": "clickup.assignTask",
        "category": "Click Up",
        "title": "Assign To",
        "icon": {
          "light": "resources/light/assign.svg",
          "dark": "resources/dark/assign.svg"
        }
      },
      {
        "command": "clickup.deleteTask",
        "category": "Click Up",
        "title": "Delete Task"
      },
      {
        "command": "clickup.editTask",
        "category": "Click Up",
        "title": "Edit Task",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "clickup.getStorageData",
        "category": "Click Up",
        "title": "Get storage data"
      },
      {
        "command": "clickup.refresh",
        "title": "Click Up",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "clickup.codelentest",
        "category": "Click Up",
        "title": "TEST: Codelen disable"
      },
      {
        "command": "clickup.getMyData",
        "category": "Click Up",
        "title": "Get My Data"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clickup-explorer",
          "title": "Clickup",
          "icon": "media/to_do_list.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "clickup-tasks",
          "name": "Clickup"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "clickup.refresh",
          "when": "view == clickup-tasks",
          "group": "navigation@1"
        },
        {
          "command": "clickup.quickAddTask",
          "when": "view == clickup-tasks"
        }
      ],
      "view/item/context": [
        {
          "command": "clickup.viewTask",
          "when": "view == clickup-tasks && viewItem == task",
          "group": "inline"
        },
        {
          "command": "clickup.quickAddTask",
          "when": "view == clickup-tasks && viewItem == list",
          "group": "inline"
        },
        {
          "command": "clickup.updateTags",
          "when": "view == clickup-tasks && viewItem == task",
          "group": "inline"
        },
        {
          "command": "clickup.updateStatus",
          "when": "view == clickup-tasks && viewItem == task",
          "group": "inline"
        },
        {
          "command": "clickup.assignTask",
          "when": "view == clickup-tasks && viewItem == task",
          "group": "inline"
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "quickStart",
        "title": "Get started with ClickItUp",
        "description": "Set up your Scrummer ClickUp VSCode extension.",
        "steps": [
          {
            "id": "setClickUpApiToken",
            "title": "Set up ClickUp API Token",
            "description": "A ClickUp API Token is required to access your Spaces.\nYou can find your API Token under Settings > Apps > API Token.\n[Set up my API Token](command:clickup.setToken)",
            "completionEvents": [
              "onCommand:clickup.setToken"
            ],
            "media": {
              "image": "src/assets/gif/demo_get_token.gif",
              "altText": "Finding your ClickUp API Token."
            }
          },
          {
            "id": "selectClickUpSpace",
            "title": "Select a ClickUp Space",
            "description": "Select a ClickUp Space you would like to work with.\nYou can only have one active Space at a time.\n[Select a Space](command:clickup.selectWorkspace)",
            "completionEvents": [],
            "media": {
              "image": "src/assets/gif/demo_set_user.gif",
              "altText": "Finding your ClickUp API Token."
            }
          },
          {
            "id": "createFirstTask",
            "title": "Create your first ClickUp Task",
            "description": "Create a ClickUp Task in the current Space.\n[Create a Task](command:clickup.addTask)",
            "completionEvents": [
              "onCommand:clickup.clickUp.addTask"
            ],
            "media": {
              "image": "src/assets/gif/demo_set_user.gif",
              "altText": "Finding your ClickUp API Token."
            }
          },
          {
            "id": "goodToGo",
            "title": "Good to go!",
            "description": "You're all set! You can now start using the extension.",
            "completionEvents": [],
            "media": {
              "image": "src/assets/gif/demo_set_user.gif",
              "altText": "Finding your ClickUp API Token."
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm-run-all compile:*",
    "compile:extension": "tsc -p ./",
    "compile:view": "webpack --mode development",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "tsc -watch -p ./",
    "watch:view": "webpack --watch --mode development",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/vscode": "^1.71.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "autoprefixer": "^10.4.13",
    "css-loader": "^6.7.2",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "file-loader": "^6.2.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "postcss-loader": "^7.0.1",
    "prettier": "^2.7.1",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.2.4",
    "ts-loader": "^9.4.1",
    "typescript": "^4.7.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@fontsource/roboto": "^4.5.8",
    "@mui/icons-material": "^5.10.14",
    "@mui/material": "^5.10.14",
    "@mui/styled-engine-sc": "^5.10.14",
    "@mui/x-date-pickers": "^5.0.8",
    "add": "^2.0.6",
    "axios": "^0.27.2",
    "clickup.js": "^3.0.2",
    "dayjs": "^1.11.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.3.6",
    "yarn": "^1.22.19"
  }
}
